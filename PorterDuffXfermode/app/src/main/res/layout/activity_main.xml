<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <com.example.porterduffxfermode.PorterDuffXfermodeView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="100dp"
        android:visibility="gone"/>
    <com.example.porterduffxfermode.MaskView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone"/>
    <com.example.porterduffxfermode.CircleImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_margin="10dp"
        android:src="@drawable/guanggaowei"
        app:type="circle" />

    <com.example.porterduffxfermode.CircleImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_margin="10dp"
        android:src="@drawable/guanggaoye"
        app:Radius="30dp"
        app:type="round" />
</LinearLayout>